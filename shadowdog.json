{
  "$schema": "schema.json",
  "plugins": [
    {
      "name": "shadowdog-lock"
    },
    {
      "name": "shadowdog-local-cache"
    }
  ],
  "watchers": [
    {
      "files": [
        "src/build-schema.ts",
        "src/config.ts",
        "src/plugins/index.ts",
        "src/pluginTypes.ts"
      ],
      "commands": [
        {
          "artifacts": [
            {
              "output": "schema.json"
            }
          ],
          "command": "npm run build-schema"
        }
      ]
    },
    {
      "files": ["README.md"],
      "commands": [
        {
          "artifacts": [
            {
              "output": "README.md.copy"
            }
          ],
          "command": "cp README.md README.md.copy"
        }
      ]
    }
  ]
}
